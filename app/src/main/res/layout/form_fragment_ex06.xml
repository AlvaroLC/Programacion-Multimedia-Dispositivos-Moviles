<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    android:layout_marginTop="@dimen/marginTop">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Nombre"/>

    <EditText
        android:id="@+id/user_name"
        app:layout_constraintTop_toBottomOf="@+id/label_username"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="text"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_user_lastname"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        android:layout_marginTop="@dimen/space_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/user_lastname"
        app:layout_constraintTop_toBottomOf="@+id/label_user_lastname"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="text"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/list_autonomic_community"
        app:layout_constraintTop_toBottomOf="@+id/user_lastname"
        android:layout_marginTop="@dimen/space_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comunidad Autónoma"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/comunity_choose"
        app:layout_constraintTop_toBottomOf="@+id/list_autonomic_community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/community"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_gender"
        app:layout_constraintTop_toBottomOf="@+id/comunity_choose"
        android:layout_marginTop="@dimen/space_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo:"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/gender_options"
        app:layout_constraintTop_toBottomOf="@+id/label_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/radio_femenino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="false"
            android:text="Mujer" />

        <RadioButton
            android:id="@+id/radio_masculino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Varón" />

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_position"
        app:layout_constraintTop_toBottomOf="@+id/gender_options"
        android:layout_marginTop="@dimen/space_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posición:"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/option_portero"
        app:layout_constraintTop_toBottomOf="@+id/label_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Portero"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/option_defensa"
        app:layout_constraintTop_toBottomOf="@+id/option_portero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Defensa"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/option_mediocentro"
        app:layout_constraintTop_toBottomOf="@+id/option_defensa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Mediocentro"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/option_delantero"
        app:layout_constraintTop_toBottomOf="@+id/option_mediocentro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Delantero"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/option_delantero">

        <Button
            android:id="@+id/button_save"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_horizontal"
            android:text="Guardar"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>