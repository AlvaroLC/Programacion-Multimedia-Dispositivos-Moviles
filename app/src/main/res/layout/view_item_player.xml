<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_horizontal"
    card_view:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ut3.ex06.presentation.Ut03Ex06Activity">

        <TextView
            style="@style/titleStyle"
            android:id="@+id/label_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_vertical"
            android:paddingLeft="@dimen/space_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Nombre del jugador" />

        <TextView
            android:id="@+id/comunity_player"
            android:paddingLeft="@dimen/space_vertical"
            android:paddingTop="@dimen/space_horizontal"
            android:paddingBottom="@dimen/space_horizontal"
            android:layout_width="@dimen/width_text"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/label_player_name"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Comunidad del jugador" />

        <TextView
            android:id="@+id/player_gender"
            android:paddingLeft="@dimen/space_vertical"
            android:paddingBottom="@dimen/space_vertical"
            android:layout_width="@dimen/width_text"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/comunity_player"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Genero del jugador" />

        <TextView
            android:id="@+id/player_position"
            android:paddingLeft="@dimen/space_vertical"
            android:paddingTop="@dimen/space_horizontal"
            android:paddingBottom="@dimen/space_horizontal"
            android:layout_width="@dimen/width_text"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_player_name"
            tools:text="Posicion del jugador" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>